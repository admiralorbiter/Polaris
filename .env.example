# Polaris Application Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS (Production)
# =============================================================================

# Secret key for Flask sessions and CSRF protection
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Database connection string (Production only)
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For SQLite: sqlite:///instance/polaris_dev.db (development)
DATABASE_URL=sqlite:///C:/Users/admir/Github/Polaris/instance/polaris_dev.db


# =============================================================================
# FLASK ENVIRONMENT
# =============================================================================

# Flask environment: development, testing, or production
FLASK_ENV=development

# =============================================================================
# DATA Importer
# =============================================================================

# Importer feature flags
IMPORTER_ENABLED=false
# Comma-separated adapter list parsed but not loaded when disabled.
IMPORTER_ADAPTERS=csv,salesforce,google_sheets
IMPORTER_WORKER_ENABLED=false

# Optional: install importer dependencies when enabling the feature
# pip install ".[importer]"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Enable monitoring
MONITORING_ENABLED=false

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# Error alerting
ERROR_ALERTING_ENABLED=false
ERROR_EMAIL_RECIPIENTS=

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10

# Enable file logging
ENABLE_FILE_LOGGING=true

# Enable console logging
ENABLE_CONSOLE_LOGGING=true

# =============================================================================
# EMAIL ALERTS (Optional)
# =============================================================================

# Enable email alerts
ENABLE_EMAIL_ALERTS=false

# SMTP Server configuration
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com

# Admin email addresses (comma-separated)
ADMIN_EMAILS=

# Email alert rate limit (per minute)
EMAIL_ALERT_RATE_LIMIT=5

# =============================================================================
# SLACK INTEGRATION (Optional)
# =============================================================================

# Enable Slack alerts
ENABLE_SLACK_ALERTS=false

# Slack webhook URL
SLACK_WEBHOOK_URL=

# Slack alert rate limit (per minute)
SLACK_ALERT_RATE_LIMIT=10

# =============================================================================
# WEBHOOK INTEGRATION (Optional)
# =============================================================================

# Enable webhook alerts
ENABLE_WEBHOOK_ALERTS=false

# Webhook URL
WEBHOOK_URL=

# Webhook alert rate limit (per minute)
WEBHOOK_ALERT_RATE_LIMIT=20

# =============================================================================
# SENTRY INTEGRATION (Optional)
# =============================================================================

# Enable Sentry error tracking
ENABLE_SENTRY=false

# Sentry DSN
SENTRY_DSN=

# =============================================================================
# APPLICATION INFO
# =============================================================================

APP_NAME=Polaris
APP_VERSION=1.0.0

# =============================================================================
# PORT (for production deployment)
# =============================================================================

# Port to run the application on (default: 5000)
PORT=5000
